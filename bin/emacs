#!/bin/bash
# executed as `emacs' to attach to the local emacs daemon 
#

#set -x

emacs_daemons=$(ps -ef | egrep 'emacs+(.*)--[d]aemon=daemon' | wc -l)

if [[ "$emacs_daemons" -gt 0 ]]; then
    emacsclient -s daemon -c $@ &> /dev/null & 
    sleep 0.1
    disown %1
else
    emacs24 --daemon=daemon
    emacsclient -s daemon -c $@ &> /dev/null & 
fi

